<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bg_landing_page" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:baselineAligned="false"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:id="@+id/imageButtonCamera"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@null"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/imageButtonGallery"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:background="@null"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_below="@+id/imageButtonCamera"
            android:layout_alignEnd="@+id/imageButtonCamera"
            android:paddingTop="35dp"
            android:layout_gravity="top|center" />

        <ImageButton
            android:id="@+id/imageButtonCollage"
            android:layout_width="131dp"
            android:layout_height="131dp"
            android:background="@null"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_below="@+id/imageButtonGallery"
            android:layout_alignEnd="@+id/imageButtonGallery"
            android:paddingTop="50dp"
            android:layout_gravity="center" />

    </LinearLayout>


</RelativeLayout>